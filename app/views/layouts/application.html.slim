doctype html
html lang="zh-cn"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    title Neus
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    nav.news-navbar.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand href=root_url Neus
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              = link_to t(:news), root_url
            li
              = link_to t(:comment), "#"
          ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              li
                = link_to current_user.email, edit_user_registration_url
              li
                = link_to t(:logout), destroy_user_session_url, method: :delete
            - else
              li
                = link_to t(:login), new_user_session_url
    .container
      - if notice
        .alert.alert-success.alert-dismissible role="alert"
          button.close type="button" data-dismiss="alert" aria-label="Close"
            span aria-hidden="true" &times;
          center
            = notice
      - if alert
        .alert.alert-danger.alert-dismissible role="alert"
          button.close type="button" data-dismiss="alert" aria-label="Close"
            span aria-hidden="true" &times;
          center
            = alert
      = yield
    footer.news-footer.footer
      .container
        p.text-muted Copyright Â© 2016 Ran Xiang
